<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.juniordesign.chemistry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".FindActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".FriendsActivity1" />
        <activity android:name=".AddFriendActivity" />
        <activity android:name=".FriendListActivity" />
        <activity android:name=".StatusActivity" />
        <activity android:name=".SuggestionActivity" />
        <activity android:name=".InterestActivity" />
        <activity android:name=".ReceiverActivity">
            <intent-filter>
                <action android:name="com.example.juniordesign.chemistry_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".InterestMenuActivity" />
        <activity android:name=".InterestListActivity" />
    </application>

</manifest>